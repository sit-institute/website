{
  "name": "Hugo",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "GO_VERSION": "1.22.3",
      "HUGO_VERSION": "0.135.0"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "bradlc.vscode-tailwindcss",
        "budparr.language-hugo-vscode",
        "tamasfe.even-better-toml"
      ]
    }
  },
  "remoteUser": "node",
  "postCreateCommand": "npm install",
  "forwardPorts": [1313]
}
